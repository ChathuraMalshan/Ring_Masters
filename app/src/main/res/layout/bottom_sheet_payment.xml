<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomSheetPayment"
    android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/paymentType"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:text="Payment Type"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/paymentImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/paymentType"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="258dp"
        android:layout_marginRight="258dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher_round"
        tools:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/paymentOffers"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentType"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Offers"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@id/paymentImageView">

        <Button
            android:id="@+id/btnEditPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Edit Payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/blue_shade_2" />
        <Button
            android:id="@+id/btnDeletePayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/blue_shade_2" />

    </LinearLayout>

</RelativeLayout>