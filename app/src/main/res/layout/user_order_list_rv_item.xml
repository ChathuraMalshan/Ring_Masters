            android:textColor="@color/blue_shade_1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderPaymentType"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@id/orderDeliveryCost"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="207dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="415dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="3dp"
            android:gravity="right"
            android:padding="4dp"
            android:text="Type"
            android:textColor="@color/blue_shade_1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PaymentOffer"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/PaymentType"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="207dp"
            android:layout_marginRight="207dp"
            android:layout_marginBottom="3dp"
            android:gravity="left"
            android:padding="4dp"
            android:text="Discount :"
            android:textColor="@color/blue_shade_1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderPaymentOffer"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@id/orderPaymentType"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="207dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="3dp"
            android:gravity="right"
            android:padding="4dp"
            android:text="Discount"
            android:textColor="@color/blue_shade_1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConfirmPurchase"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="206dp"
            android:layout_marginRight="206dp"
            android:text="Confirm Purchase"
            android:textStyle="bold"
            app:backgroundTint="#3F51B5" />

        <Button
            android:id="@+id/btnCancelPurchase"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="205dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="Cancel Purchase"
            android:textStyle="bold"
            app:backgroundTint="#3F51B5" />
    </RelativeLayout>


</RelativeLayout>

